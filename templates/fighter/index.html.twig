{% extends 'base.html.twig' %}

{% block title %}List of characters{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for fighter in fighters %}
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card bg-light mb-3">
                        <div class="card-header font-weight-bold">
                             <span class="float-left">{{ fighter.name }}</span>
                             <span class="float-right">Level {{ fighter.level }}</span>
                        </div>
                        <div class="card-body">
                            <div class="text-center">
                                <img src="http://127.0.0.1:8000/img/avatars/{{ fighter.owner.image }}" alt="" class="avatar avatar-medium">
                                <br>
                                <p class="mt-2">Character of <span class="font-weight-bold">{{ fighter.owner.pseudo }}</span></p>
                                <hr>
                                <div>
                                    <table class="mx-auto mb-3">
                                        <thead>
                                            <tr>
                                                <th class="px-2"><img src="http://127.0.0.1:8000/img/stats/heart.png" alt=""></th>
                                                <th class="px-2"><img src="http://127.0.0.1:8000/img/stats/sword_silver.png" alt=""></th>
                                                <th class="px-2"><img src="http://127.0.0.1:8000/img/stats/leaf.png" alt=""></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>{{ fighter.vitality }}</td>
                                                <td>{{ fighter.strength }}</td>
                                                <td>{{ fighter.dexterity }}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a href="{{ path('fighters_show', {'id': fighter.id}) }}" class="btn btn-secondary">More informations</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
