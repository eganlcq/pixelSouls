{% extends "admin/base.html.twig" %}

{% block title %}Edition of character n°{{ fighter.id }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <hr class="bg-secondary">
                <h2 class="text-center">Edition of character n°{{ fighter.id }}</h2>
                <hr class="bg-secondary">
                <div class="alert bg-light">
                    <strong>Total fights : </strong>{{ fighter.totalFights }} <br>
                    <strong>Owner : </strong>{{ fighter.owner.pseudo }}<img src="/img/avatars/{{ fighter.owner.image }}" alt="" class="avatar avatar-micro ml-2"> <br>
                    <strong>Creation date : </strong>{{ fighter.createdAt | date('d/m/Y G:m:s') }}
                </div>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i>
                    Register modifications
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}