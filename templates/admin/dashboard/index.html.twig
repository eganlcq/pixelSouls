{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card bg-primary text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <div class="col-8 align-self-center">
                            <h4 class="card-title mb-0">{{ stats.users }} users subscribed</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-warning text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-hand-rock fa-3x"></i>
                        </div>
                        <div class="col-8 align-self-center">
                            <h4 class="card-title mb-0">{{ stats.characters }} characters created</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-success text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-folder fa-3x"></i>
                        </div>
                        <div class="col-8 align-self-center">
                            <h4 class="card-title mb-0">{{ stats.posts }} posts created</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-danger text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-comment fa-3x"></i>
                        </div>
                        <div class="col-8 align-self-center">
                            <h4 class="card-title mb-0">{{ stats.comments }} comments written</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <h2 class="alert-heading my-3 text-center"><i class="fas fa-arrow-up"></i>&nbsp;Best characters</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Character</th>
                            <th>User</th>
                            <th class="text-center">NB Win</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for data in bestCharacters %}
                            <tr>
                                <td class="align-middle">{{ data.name }}</td>
                                <td class="align-middle"><img src="/img/avatars/{{ data.image }}" alt="" class="avatar avatar-micro mr-2">{{ data.pseudo }}</td>
                                <td class="text-center align-middle">{{ data.totalWin }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col">
            <div class="alert alert-light">
                <h2 class="alert-heading my-3 text-center"><i class="fas fa-arrow-down"></i>&nbsp;Worst characters</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Character</th>
                            <th>User</th>
                            <th class="text-center">NB Win</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for data in worstCharacters %}
                            <tr>
                                <td class="align-middle">{{ data.name }}</td>
                                <td class="align-middle"><img src="/img/avatars/{{ data.image }}" alt="" class="avatar avatar-micro mr-2">{{ data.pseudo }}</td>
                                <td class="text-center align-middle">{{ data.totalWin }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
