{% extends "base.html.twig" %}

{% block title %}Leaderboard{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <hr class="bg-secondary">
                <h2 class="text-center">Leaderboard</h2>
                <hr class="bg-secondary">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Pseudo</th>
                            <th class="text-center">NB WIN</th>
                            <th class="text-center">NB LOOSE</th>
                            <th class="text-center">Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in pagination.data %}
                            <tr>
                                <td class="align-middle">
                                    <img src="/img/avatars/{{ user.image }}" alt="" class="avatar avatar-mini">
                                    &nbsp;
                                    <a href="{{ path('user_show', {'id': user.id}) }}">{{ user.pseudo }}</a>
                                </td>
                                <td class="text-center align-middle">{{ user.totalWin }}</td>
                                <td class="text-center align-middle">{{ user.totalLoose }}</td>
                                <td class="text-center align-middle">{{ user.score }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {{ pagination.display() }}
            </div>
        </div>
        
    </div>
{% endblock %}