{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block stylesheets %}
    <link rel="shortcut icon" href="TemplateData/favicon.ico">
    <link rel="stylesheet" href="TemplateData/style.css">
{% endblock %}

{% block javascripts %}
    <script src="TemplateData/UnityProgress.js"></script>
    <script src="Build/UnityLoader.js"></script>
    <script>
      var gameInstance = UnityLoader.instantiate("gameContainer", "Build/Downloads.json", {onProgress: UnityProgress});
    </script>
{% endblock %}

{% block body %}
    <div class="container d-none d-lg-block">
      <div class="webgl-content">
        <div id="gameContainer" style="width: 960px; height: 600px;"></div>
        <div class="footer text-center">
          <button class="btn btn-primary p-1" onclick="gameInstance.SetFullscreen(1)"><i class="fas fa-arrows-alt"></i> Full screen</button>
        </div>
      </div>
    </div>
    <div class="container d-lg-none">
      <div class="alert alert-warning">
        <p class="text-center">If you want to play on smaller device check out the mobile version of our game !</p>
      </div>
    </div>
{% endblock %}
